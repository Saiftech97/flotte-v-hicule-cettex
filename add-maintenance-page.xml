<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="bg-gray-100">
    <ActionBar title="Nouvelle maintenance" class="bg-blue-600 text-white">
        <NavigationButton text="Retour" android.systemIcon="ic_menu_back" />
    </ActionBar>
    
    <ScrollView>
        <StackLayout class="p-4">
            <Label text="Type d'intervention" class="text-gray-700 font-medium mb-1" />
            <ListPicker items="{{ maintenanceTypes }}" selectedIndex="{{ selectedTypeIndex }}" 
                       class="mb-4 p-3 bg-white rounded border border-gray-300" />
            
            <Label text="Description" class="text-gray-700 font-medium mb-1" />
            <TextView text="{{ newMaintenance.description }}" hint="Détails de l'intervention" 
                     class="mb-4 p-3 bg-white rounded border border-gray-300" />
            
            <Label text="Coût" class="text-gray-700 font-medium mb-1" />
            <TextField text="{{ newMaintenance.cost }}" hint="Montant en euros" keyboardType="number" 
                      class="mb-4 p-3 bg-white rounded border border-gray-300" />
            
            <Label text="Kilométrage actuel" class="text-gray-700 font-medium mb-1" />
            <TextField text="{{ newMaintenance.mileage }}" hint="Kilométrage" keyboardType="number" 
                      class="mb-4 p-3 bg-white rounded border border-gray-300" />
            
            <Button text="Enregistrer la maintenance" tap="{{ onSaveMaintenance }}" 
                    class="bg-blue-600 text-white p-3 rounded-lg" />
        </StackLayout>
    </ScrollView>
</Page>